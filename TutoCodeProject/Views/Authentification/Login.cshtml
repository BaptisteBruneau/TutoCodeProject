@model TutoCodeProject.Models.UserDetails

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body> 
    <div class="container">
        @Html.ValidationMessage("CredentialError", new { style = "color: red;" })
        @using (Html.BeginForm("DoLogin", "Authentification", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                @Html.LabelFor(c => c.UserName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = "Utilisateur", autofocus = "true" })
                    @Html.ValidationMessageFor(x => x.UserName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.Password, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4">
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Mot de passe" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-4">
                    <input type="submit" class="btn btn-primary col-sm-12" name="BtnSubmit" value="Login" />
                </div>
            </div>
        }
    </div>
</body>
</html>
